    </appender>

 -->




    <!-- 特定日志 -->
    <logger name="logForDbOnly" additivity="false">
        <!--  <appender-ref ref="ERROR_DB"/>-->
    </logger>


    <root level="${LOG_LEVEL_PATTERN}">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="LOG_FILE" />
       <!-- <appender-ref ref="WARN_FILE" />-->
        <!-- <appender-ref ref="ERROR_DB"/>-->
    </root>


</configuration>